{
    "comment": "ESCore 7 Base Atomic Defs",

    "osname": "escore-atomic",
    "ref": "escore/7/atomic/x86_64/base",
    
    "repos": ["CentOS-Base", "CentOS-updates", "CentOS-extras",
              "atomic7-testing", "virt7-testing", "escore-base"],

    "selinux": true,

    "bootstrap_packages": ["filesystem", "glibc", "nss-altfiles", "shadow-utils",
